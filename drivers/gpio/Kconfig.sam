config GPIO_SAM
	bool "Atmel SAM GPIO (PORT) driver"
	default y
	depends on SOC_FAMILY_SAM && !SOC_SERIES_SAM4L
	select HAS_DTS_GPIO
	help
	  Enable support for the Atmel SAM 'PORT' GPIO controllers.

config GPIO_SAM4L
	bool "Atmel SAM GPIO (PORT) driver"
	default y
	depends on SOC_SERIES_SAM4L
	select HAS_DTS_GPIO
	help
	  Enable support for the Atmel SAM 'PORT' GPIO controllers.
