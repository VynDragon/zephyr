#include <arm/armv7-m.dtsi>
#include <dt-bindings/i2c/i2c.h>
#include <dt-bindings/gpio/gpio.h>

/ {
	aliases {
		watchdog0 = &wdog;
	};

	cpus {
		#address-cells = <1>;
		#size-cells = <0>;

		cpu0: cpu@0 {
			device_type = "cpu";
			compatible = "arm,cortex-m4";
			clock-frequency = <48000000>;
			reg = <0>;
		};
	};

	sram0: memory@20000000 {
		compatible = "mmio-sram";
	};

	flash0: flash@0 {
		compatible = "soc-nv-flash";
		label = "FLASH_0";
	};

	soc {
		wdog: watchdog@400f0c00 {
			compatible = "atmel,sam-tw-watchdog";
			reg = <0x400f0c00 0x400>;
			interrupts = <44 0>;
			peripheral-id = <163>;
			label = "WATCHDOG_0";
			psel = <16>;
			status = "disabled";
		};

		i2c0: i2c@40018000 {
			compatible = "atmel,sam-i2c-twim";
			clock-frequency = <I2C_BITRATE_STANDARD>;
			reg = <0x40018000 0x4000>;
			interrupts = <61 0>;
			peripheral-id = <68>;
			label = "I2C_0";
			status = "disabled";
			#address-cells = <1>;
			#size-cells = <0>;
		};
		i2c1: i2c@4001c000 {
			compatible = "atmel,sam-i2c-twim";
			clock-frequency = <I2C_BITRATE_STANDARD>;
			reg = <0x4001c000 0x4000>;
			interrupts = <63 0>;
			peripheral-id = <70>;
			label = "I2C_1";
			status = "disabled";
			#address-cells = <1>;
			#size-cells = <0>;
		};
		i2c2: i2c@40078000 {
			compatible = "atmel,sam-i2c-twim";
			clock-frequency = <I2C_BITRATE_STANDARD>;
			reg = <0x40078000 0x4000>;
			interrupts = <77 0>;
			peripheral-id = <85>;
			label = "I2C_2";
			status = "disabled";
			#address-cells = <1>;
			#size-cells = <0>;
		};
		i2c3: i2c@4007c000 {
			compatible = "atmel,sam-i2c-twim";
			clock-frequency = <I2C_BITRATE_STANDARD>;
			reg = <0x4007c000 0x4000>;
			interrupts = <78 0>;
			peripheral-id = <86>;
			label = "I2C_3";
			status = "disabled";
			#address-cells = <1>;
			#size-cells = <0>;
		};

		spi0: spi@40008000 {
			compatible = "atmel,sam-spi";
			reg = <0x40008000 0x4000>;
			interrupts = <54 0>;
			peripheral-id = <65>;
			label = "SPI_0";
			status = "disabled";
			#address-cells = <1>;
			#size-cells = <0>;
		};

		usart0: usart@40024000 {
			compatible = "atmel,sam-usart";
			reg = <0x40024000 0x4000>;
			interrupts = <65 1>;
			peripheral-id = <72>;
			status = "disabled";
			label = "USART_0";
		};
		usart1: usart@40028000 {
			compatible = "atmel,sam-usart";
			reg = <0x40028000 0x4000>;
			interrupts = <66 1>;
			peripheral-id = <73>;
			status = "disabled";
			label = "USART_1";
		};
		usart2: usart@4002c000 {
			compatible = "atmel,sam-usart";
			reg = <0x4002c000 0x4000>;
			interrupts = <67 1>;
			peripheral-id = <74>;
			status = "disabled";
			label = "USART_2";
		};
		usart3: usart@40030000 {
			compatible = "atmel,sam-usart";
			reg = <0x40030000 0x4000>;
			interrupts = <68 1>;
			peripheral-id = <75>;
			status = "disabled";
			label = "USART_3";
		};

		porta: gpio@400e1000 {
			compatible = "atmel,sam-gpio";
			reg = <0x400e1000 0x200>;
			interrupts = <25 1>, <26 1>, <27 1>, <28 1>;
			peripheral-id = <132>;
			label = "PORTA";
			gpio-controller;
			#gpio-cells = <2>;
		};
		portb: gpio@400e1200 {
			compatible = "atmel,sam-gpio";
			reg = <0x400e1200 0x200>;
			interrupts = <29 1>, <30 1>, <31 1>, <32 1>;
			peripheral-id = <132>;
			label = "PORTB";
			gpio-controller;
			#gpio-cells = <2>;
		};
		portc: gpio@400e1400 {
			compatible = "atmel,sam-gpio";
			reg = <0x400e1400 0x200>;
			interrupts = <33 1>, <34 1>, <35 1>, <36 1>;
			peripheral-id = <132>;
			label = "PORTC";
			gpio-controller;
			#gpio-cells = <2>;
		};
	};
};

&nvic {
	arm,num-irq-priority-bits = <4>;
};
