	model = "bl616 ai_m62_32s";
	compatible = "bflb,bl616";

	chosen {
		zephyr,flash = &flash0;
		zephyr,itcm = &sram1;
		zephyr,sram = &sram0;
		zephyr,console = &uart0;
		zephyr,shell-uart = &uart0;
