if BOARD_SAM4L_WM400_CAPE

config BOARD
	default "sam4l_wm400_cape"

#if SOC_FLASH_SAM_FLASHCALW
#	default FLASH
#endif

if USART_SAM_PORT_0

choice USART_SAM_PORT_0_PIN_RXD
	default USART_SAM_PORT_0_PIN_RXD_PB14
endchoice

choice USART_SAM_PORT_0_PIN_TXD
	default USART_SAM_PORT_0_PIN_TXD_PB15
endchoice

endif

if USART_SAM_PORT_1

choice USART_SAM_PORT_1_PIN_RXD
	default USART_SAM_PORT_1_PIN_RXD_PA15
endchoice

choice USART_SAM_PORT_1_PIN_TXD
	default USART_SAM_PORT_1_PIN_TXD_PA16
endchoice

endif

config SPI_SAM_PORT_0
	default y
	depends on SPI_SAM

config IEEE802154_RF2XX
	default y
	depends on IEEE802154

endif # BOARD_SAM4L_WM400_CAPE
