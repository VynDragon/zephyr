/dts-v1/;
#include <st/l0/stm32l072Xb.dtsi>

/ {
	model = "ATL-Electronics LoRaWAN Module";
	compatible = "atl,stm32l07x-lrwan";

	chosen {
		zephyr,console = &usart2;
		zephyr,shell-uart = &usart2;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};

	leds {
		compatible = "gpio-leds";
		green_led_0: led_0 {
			gpios = <&gpioa 0 GPIO_ACTIVE_HIGH>;
			label = "Green LED 1";
		};
		green_led_1: led_1 {
			gpios = <&gpioa 1 GPIO_ACTIVE_HIGH>;
			label = "Green LED 2";
		};
		green_led_2: led_2 {
			gpios = <&gpiob 4 GPIO_ACTIVE_HIGH>;
			label = "Green LED 3";
		};
	};

	gpio_keys {
		compatible = "gpio-keys";
		user_button: button_0 {
			label = "Push button switch";
			gpios = <&gpiob 5 GPIO_ACTIVE_LOW>;
		};
	};

	/* These aliases are provided for compatibility with samples */
	aliases {
		led0 = &green_led_0;
		led1 = &green_led_1;
		led2 = &green_led_2;
		sw0 = &user_button;
		eeprom-0 = &eeprom;
		lora0 = &lora;
	};
};

&usart2 {
	current-speed = <115200>;
	status = "okay";
};

&spi1 {
	status = "okay";
	cs-gpios = <&gpioa 4 GPIO_ACTIVE_LOW>;

	lora: sx1276@0 {
		compatible = "semtech,sx1276";
		reg = <0>;
		label = "sx1276";
		reset-gpios = <&gpioa 12 GPIO_ACTIVE_LOW>;
		dio-gpios = <&gpioa 11 (GPIO_PULL_DOWN | GPIO_ACTIVE_HIGH)>,
			<&gpioa 10 (GPIO_PULL_DOWN | GPIO_ACTIVE_HIGH)>,
			<&gpioa 9 (GPIO_PULL_DOWN | GPIO_ACTIVE_HIGH)>,
			<&gpioa 8 (GPIO_PULL_DOWN | GPIO_ACTIVE_HIGH)>,
			<&gpiob 1 (GPIO_PULL_DOWN | GPIO_ACTIVE_HIGH)>,
			<&gpiob 2 (GPIO_PULL_DOWN | GPIO_ACTIVE_HIGH)>;
		power-amplifier-output="pa-boost";
		spi-max-frequency = <1000000>;
	};
};

&i2c1 {
	status = "okay";
	clock-frequency = <I2C_BITRATE_FAST>;
};

&rtc {
	status = "okay";
};

&rng {
	status = "okay";
};

&eeprom {
	status = "okay";
};

&flash0 {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		/* Set aside 16KiB for data at the end of the 128KiB flash */
		storage_partition: partition@24000 {
			label = "storage";
			reg = <0x00024000 0x00004000>;
		};
	};
};
